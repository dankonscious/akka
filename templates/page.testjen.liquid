<script type="text/javascript">
   document.addEventListener('DOMContentLoaded', function () {
        const linksContainer = document.querySelector('.footer-links');
        const links = Array.from(linksContainer.querySelectorAll('a:not([hidden])'));
        
        links.forEach((link, index) => {
            if (index < links.length - 1) {
                const separator = document.createElement('span');
                separator.textContent = ' | ';
                linksContainer.insertBefore(separator, link.nextSibling);
            }
        });
    });
    document.getElementById('openModal').addEventListener('click', function() {
        document.getElementById('modal').classList.remove('hidden');
        document.getElementById('modal').classList.add('flex');
    });

    document.getElementById('closeModal').addEventListener('click', function() {
        document.getElementById('modal').classList.remove('flex');
        document.getElementById('modal').classList.add('hidden');
    });

    Element.prototype.isInViewport = function() {
        var elementTop = this.offsetTop + 180;
        var elementBottom = elementTop + this.offsetHeight;

        var viewportTop = window.pageYOffset;
        var viewportBottom = viewportTop + window.innerHeight;

        return elementBottom > viewportTop && elementTop < viewportBottom;
    };

    window.addEventListener('resize', handleResizeOrScroll);
    window.addEventListener('scroll', handleResizeOrScroll);

    function handleResizeOrScroll() {
        document.querySelectorAll('section').forEach(function(section) {
            if (section.isInViewport()) {
                if (section.classList.contains('show-claim-button')) {
                    if (!document.querySelector('.sticky-btn').classList.contains('block')) {
                        document.querySelector('.sticky-btn').classList.remove('hidden');
                        document.querySelector('.sticky-btn').classList.add('block');
                    }
                } else if (section.classList.contains('hide-claim-button')) {
                    if (!document.querySelector('.sticky-btn').classList.contains('hidden')) {
                        document.querySelector('.sticky-btn').classList.remove('block');
                        document.querySelector('.sticky-btn').classList.add('hidden');
                    }
                } else {
                    // If section doesn't have either class, revert to default state
                    if (!document.querySelector('.sticky-btn').classList.contains('hidden')) {
                        document.querySelector('.sticky-btn').classList.remove('block');
                        document.querySelector('.sticky-btn').classList.add('hidden');
                    }
                }
            }
        });
    }

    document.querySelectorAll('.read-more').forEach(button => {
        button.addEventListener('click', function() {
            const targetId = this.getAttribute('data-target');
            const moreText = document.querySelector(`.more-text[data-target="${targetId}"]`);
            if (moreText.classList.contains('hidden')) {
                moreText.classList.remove('hidden');
                this.textContent = '(Read less)';
            } else {
                moreText.classList.add('hidden');
                this.textContent = '(Read more)';
            }
        });
    });
    // Get the current year
    var currentYear = new Date().getFullYear();
    // Find the element with class "copyright-year"
    var copyrightYearElement = document.querySelector('.copyright-year');
    
    // Update the year inside the element
    if (copyrightYearElement) {
        copyrightYearElement.textContent = currentYear;
    }
</script>