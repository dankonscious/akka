    </div>
    <div class="flex justify-between items-start mt-[28px] max-md:flex-col max-md:px-4 max-md:gap-2 max-md:pb-[49px]">
      <div class="py-[32px] pl-[40px] bg-[#3E488B] backdrop-blur-2xl rounded-[6px] max-w-[431px] w-full">
        <img src="{{ section.settings.icon_image1 | img_url: 'master' }}" alt="">
        <p class="text-[24px] text-[#C9CFE1] leading-[150%] tracking-[0.48px] py-[16px]">{{ section.settings.final_text1 }}</p>
      </div>
      <div class="py-[32px] pl-[40px] bg-[#3E488B] backdrop-blur-2xl rounded-[6px] max-w-[431px] w-full h-[265px]">
        <img src="{{ section.settings.icon_image2 | img_url: 'master' }}" alt="">
        <p class="text-[24px] text-[#C9CFE1] leading-[150%] tracking-[0.48px] py-[16px]">{{ section.settings.final_text2 }}</p>
