
    
<section id="marquee" class="bg-white pt-[49px] mb-[-48px] max-lg:pt-0 max-lg:overflow-hidden">
    <!-- Slider main container -->
    <div class="marquee swiper">
    <!-- Additional required wrapper -->
        <div class="swiper-wrapper !h-auto">
            <!-- Slides -->
            {% for block in section.blocks %}
            <div class="swiper-slide !flex !items-center !justify-center gap-[35px] !w-[unset] !h-[unset] font-['blisstwin']">
                <h3 class="text-[100px] text-[#C8D3F0] capitalize">{{ block.settings.text_content }}</h3>
                <div class="w-[15px] h-[15px] bg-[#C8D3F0] rotate-45"></div>
            </div>
            {% endfor %}
        </div>      
    </div>
</section>

<script>
  const swiperMarquee = new Swiper(".marquee", {
    spaceBetween: 35,
    centeredSlides: true,
    speed: 6000,
    autoplay: {
      delay: 1,
    },
    loop: true,
    slidesPerView:'auto',
    allowTouchMove: false,
    disableOnInteraction: true
  });
</script>

