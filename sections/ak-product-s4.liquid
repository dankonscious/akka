<script>
  document.addEventListener("DOMContentLoaded", function () {
  const targetClass = "forhoveranimation"; // Replace with your target class
  const hoverClass = "hover"; // Class to simulate hover state
  const intervalTime = 3000; // 2 seconds

  // Function to check if the device is mobile
  function isMobile() {
    return window.innerWidth <= 768; // Adjust as necessary
  }

  // Function to simulate hover state
  function toggleHoverEffect() {
    if (isMobile()) {
      const elements = document.querySelectorAll(`.${targetClass}`);

      elements.forEach((element) => {
        if (element.classList.contains(hoverClass)) {
          element.classList.remove(hoverClass);
        } else {
          element.classList.add(hoverClass);
        }
      });
    }
  }

  // Run the toggle function every 2 seconds on mobile
  setInterval(toggleHoverEffect, intervalTime);
});

</script>

