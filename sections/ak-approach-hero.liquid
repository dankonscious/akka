<style>
    #hero {
        background-image: url({{ section.settings.background_image | img_url: 'master' }});
        animation:bgmovement 1.2s ease-out forwards;
    }
    #hero .whitebg {      
      background: white;      
      -webkit-mask: radial-gradient(#000 70%, #0000 71%) no-repeat, linear-gradient(#000 0 0);
      mask: radial-gradient(#000 70%, #0000 71%) no-repeat, linear-gradient(#000 0 0);
      mask-position: center;
      mask-size: 30% 60%;
      -webkit-mask-composite: xor;
      mask-composite: exclude;
      -webkit-transition: 1s ease-out;
      -moz-transition: 1s ease-out;
      -o-transition: 1s ease-out;
      transition: 1s ease-out;
      z-index: 11111111;
      -moz-animation:scoop 1.2s ease-out forwards;
      -webkit-animation:scoop 1.2s ease-out forwards;
      animation:scoop 1.2s ease-out forwards;
    }    
    #hero .animation-moveup {
      animation: ;
    }
    @keyframes scoop {
      from {
        mask-size: 30% 60%;
        
      }
      to {
        mask-size: 150% 250%;
        
      }
    }
    @keyframes bgmovement {
      from {
          background-position-y: -10px;
      } 
      to  {
          background-position-y: 0px;
      }
    }
    @keyframes textbg {
      from  {background-position-y: -88px;;}
      to {background-position-y: 0px;}
    }
    @keyframes circlesOp {
      from {opacity: 0;}
      to {opacity: 1;}
    }
    /* #hero .circlebg {
        background-image: url({{ section.settings.circle_graphic | img_url: 'master' }});
    } */
    #hero .textbg {
      background-image: url({{ section.settings.text_background | img_url: 'master' }});
      -moz-animation:textbg 1.2s ease-out forwards;
      -webkit-animation:textbg 1.2s ease-out forwards;
      animation:textbg 1.2s ease-out forwards;
    }
    #hero .circlesop {
      -moz-animation:circlesOp 1.2s ease-out forwards;
      -webkit-animation:circlesOp 1.2s ease-out forwards;
      animation:circlesOp 1.2s ease-out forwards;
    }
    #hero .bcircle {
      width: 1034px;
      height: 1034px;
      border: 2px solid #BCBCBC;
      border-radius: 100%;
    }
    #hero .mask {
      -webkit-mask: radial-gradient(30px,#0000 98%,#000) 10000% 10000%/99.5% 99.5%;
      mask: radial-gradient(30px,#0000 98%,#000) 10000% 10000%/99.5% 99.5%;
    }
    
    @media(max-width: 1200px) {
        #hero .circlebg {
            background-image: none;
        }
        #hero .textbg {
         background-image:none;
        }
        .rotate-mobile {
          -webkit-animation:spin 16s linear infinite;
          -moz-animation:spin 16s linear infinite;
          animation:spin 16s linear infinite;
        }
    }
</style>
<section id="hero" class="bg-no-repeat bg-cover bg-center min-h-[980px] flex items-center relative max-md:min-h-[660px] overflow-hidden xl:h-[980px] ">  
  <div class="whitebg absolute w-full h-full"></div>
  <div class="circlesop absolute max-w-[1728px] w-full h-full z-10 max-[1200px]:hidden left-[50%] translate-x-[-50%]">
    <div class="relative w-full h-full ">
      {% comment %} left Circle {% endcomment %}
      <div class="absolute left-[-27%] top-[-27px] w-[1034px] h-[1034px]  rotate-[171deg]">
        <div class="rotate-me left-circle bcircle relative">
          <div class="w-[11px] h-[11px] bg-[#BCBCBC] rotate-[-45deg] absolute top-[430px] z-20"></div>
        </div>
      </div>
      {% comment %} Center Circle {% endcomment %}
      <div class="absolute left-[50%] top-[-27px] translate-x-[-50%] w-[1034px] h-[1034px]">
        <div class="rotate-me center-circle bcircle relative">
          <div class="absolute top-[50%] left-[50%] translate-x-[-50%] translate-y-[-50%] rounded-full border-2 border-solid border-[#BCBCBC] w-[592px] h-[592px]"></div>
          <div class="w-[11px] h-[11px] bg-[#BCBCBC] rotate-[-45deg] absolute top-[430px] z-20"></div>
        </div>
      </div>  
      {% comment %} Rigth Circle {% endcomment %}
      <div class="absolute right-[-27%] top-[-27px] w-[1034px] h-[1034px]  rotate-[-8deg]">
        <div class="rotate-me left-circle bcircle relative">
          
          <div class="w-[11px] h-[11px] bg-[#BCBCBC] rotate-[-45deg] absolute top-[430px] z-20"></div>
        </div>
      </div>       
      
        
    </div>
  </div>

  <div class="circlebg absolute top-0 left-0 z-0 h-full w-full bg-no-repeat bg-cover bg-center max-md:w-[348px] max-md:h-[348px] max-md:inset-[50%] max-md:translate-x-[-50%] max-md:translate-y-[-50%]">
    <img class="rotate-mobile hidden max-[1200px]:block" src="{{ section.settings.circle_graphic_mobile | img_url: 'master' }}" alt="">
  </div>

  <div class="flex items-center justify-center m-auto h-full">
    <div class="textbg title overflow-hidden relative z-10 bg-contain bg-center bg-no-repeat w-[971px] max-[1200px]:w-fit max-md:bg-none">
      <h1 class="animation-moveup text-white text-[70px] leading-[normal] tracking-[-1.4px] capitalize font-['syne'] max-md:text-[40px] text-center">
        {{ section.settings.heading }}
        <span class="font-['Blisstwin'] max-md:block">{{ section.settings.subheading }}</span>
      </h1>
    </div>
  </div>
</section>

<script>
  window.addEventListener('load', function() {
    const whiteBgElement = document.querySelector('#hero .whitebg');
    whiteBgElement.classList.add('active');
  });
</script>

