<style>
    #hero {
        background-image: url({{ section.settings.background_image | img_url: 'master' }});
        animation:bgmovement 1.2s ease-out forwards;
    }
    #hero .whitebg {      
      background: white;      
      -webkit-mask: radial-gradient(#000 70%, #0000 71%) no-repeat, linear-gradient(#000 0 0);
      mask: radial-gradient(#000 70%, #0000 71%) no-repeat, linear-gradient(#000 0 0);
      mask-position: center;
      mask-size: 30% 60%;
      -webkit-mask-composite: xor;
      mask-composite: exclude;
      -webkit-transition: 1s ease-out;
      -moz-transition: 1s ease-out;
      -o-transition: 1s ease-out;
      transition: 1s ease-out;
      z-index: 11111111;
      -moz-animation:scoop 1.2s ease-out forwards;
      -webkit-animation:scoop 1.2s ease-out forwards;
      animation:scoop 1.2s ease-out forwards;
    }    
    #hero .animation-moveup {
      
    }
    #hero .text-downup {
      animation:movedownUp 1.5s ease-out forwards;
      transition: 1.5s ease-out;
    }    
    /* #hero .circlebg {
        background-image: url({{ section.settings.circle_graphic | img_url: 'master' }});
    } */
    #hero .textbg {
      background-image: url({{ section.settings.text_background | img_url: 'master' }});
      transition: 1.5s ease-out;
      -moz-animation:textbg 1.2s ease-out forwards;
      -webkit-animation:textbg 1.2s ease-out forwards;
      animation:textbg 1.2s ease-out forwards;
    }
    #hero .circlesop {
      -moz-animation:circlesOp 1.2s ease-out forwards;
      -webkit-animation:circlesOp 1.2s ease-out forwards;
      animation:circlesOp 1.2s ease-out forwards;
    }
    #hero .bcircle {
      width: 1034px;
      height: 1034px;
      border: 2px solid #BCBCBC;
      border-radius: 100%;
    }
    #hero .mask {
      -webkit-mask: radial-gradient(30px,#0000 98%,#000) 10000% 10000%/99.5% 99.5%;
      mask: radial-gradient(30px,#0000 98%,#000) 10000% 10000%/99.5% 99.5%;
    }
    
    @media(max-width: 1200px) {
        #hero .circlebg {
            background-image: none;
        }
        #hero .textbg {
         background-image:none;
        }
        .rotate-mobile {
          -webkit-animation:spin 16s linear infinite;
          -moz-animation:spin 16s linear infinite;
          animation:spin 16s linear infinite;
        }
    }
    @keyframes movedownUp {
      from {transform:translateY(100%);}
      to {transform:translateY(0%);}
    }
    @keyframes scoop {
      from {
        mask-size: 30% 60%;
        
      }
      to {
        mask-size: 150% 250%;
        
      }
    }
    @keyframes bgmovement {
      from {
          background-position-y: -10px;
      } 
      to  {
          background-position-y: 0px;
      }
    }
    @keyframes textbg {
      from  {background-position-y: -2200%;}
      to {background-position-y: 0%;}
    }
    @keyframes circlesOp {
      from {opacity: 0;}
      to {opacity: 1;}
    }
</style>
<section id="hero" class="ak-bg-no-repeat ak-bg-cover ak-bg-center ak-min-h-[980px] ak-flex ak-items-center ak-relative max-lg:ak-min-h-[660px] ak-overflow-hidden xl:ak-h-[980px]">  
  <div class="whitebg ak-absolute ak-w-full ak-h-full"></div>
  <div class="circlesop ak-absolute ak-max-w-[1728px] ak-w-full ak-h-full ak-z-10 max-lg:ak-hidden ak-left-[50%] ak-translate-x-[-50%]">
    <div class="ak-relative ak-w-full ak-h-full">
      {% comment %} left Circle {% endcomment %}
      <div class="ak-absolute ak-left-[-27%] ak-top-[-27px] ak-w-[1034px] ak-h-[1034px] ak-rotate-[171deg]">
        <div class="rotate-me left-circle bcircle ak-relative">
          <div class="ak-w-[11px] ak-h-[11px] ak-bg-[#BCBCBC] ak-rotate-[-45deg] ak-absolute ak-top-[430px] ak-z-20"></div>
        </div>
      </div>
      {% comment %} Center Circle {% endcomment %}
      <div class="ak-absolute ak-left-[50%] ak-top-[-27px] ak-translate-x-[-50%] ak-w-[1034px] ak-h-[1034px]">
        <div class="rotate-me center-circle bcircle ak-relative">
          <div class="ak-absolute ak-top-[50%] ak-left-[50%] ak-translate-x-[-50%] ak-translate-y-[-50%] ak-rounded-full ak-border-2 ak-border-solid ak-border-[#BCBCBC] ak-w-[592px] ak-h-[592px]"></div>
          <div class="ak-w-[11px] ak-h-[11px] ak-bg-[#BCBCBC] ak-rotate-[-45deg] ak-absolute ak-top-[430px] ak-z-20"></div>
        </div>
      </div>  
      {% comment %} Rigth Circle {% endcomment %}
      <div class="ak-absolute ak-right-[-27%] ak-top-[-27px] ak-w-[1034px] ak-h-[1034px] ak-rotate-[-8deg]">
        <div class="rotate-me left-circle bcircle ak-relative">
          
          <div class="ak-w-[11px] ak-h-[11px] ak-bg-[#BCBCBC] ak-rotate-[-45deg] ak-absolute ak-top-[430px] ak-z-20"></div>
        </div>
      </div>       
      
        
    </div>
  </div>

  <div class="circlebg ak-absolute ak-top-0 ak-left-0 ak-z-0 ak-h-full ak-w-full ak-bg-no-repeat ak-bg-cover ak-bg-center max-lg:ak-w-[348px] max-lg:ak-h-[348px] max-lg:ak-inset-[50%] max-lg:ak-translate-x-[-50%] max-lg:ak-translate-y-[-50%]">
    <img class="rotate-mobile ak-hidden max-lg:ak-block" src="{{ section.settings.circle_graphic_mobile | img_url: 'master' }}" alt="">
  </div>

  <div class="ak-flex ak-items-center ak-justify-center ak-m-auto ak-h-full">
    <div class="textbg title ak-overflow-hidden ak-relative ak-z-10 ak-bg-contain ak-bg-center ak-bg-no-repeat ak-w-[971px] max-lg:ak-w-fit max-lg:ak-bg-none">
      <h1 class="text-downup ak-text-white ak-text-[70px] ak-leading-[normal] ak-tracking-[-1.4px] ak-capitalize ak-font-['syne'] max-lg:ak-text-[40px] ak-text-center">
        {{ section.settings.heading }}
        <span class="ak-font-['Blisstwin'] max-lg:ak-block">{{ section.settings.subheading }}</span>
      </h1>
    </div>
  </div>
</section>

<script>
  window.addEventListener('load', function() {
    const whiteBgElement = document.querySelector('#hero .whitebg');
    whiteBgElement.classList.add('active');
  });
</script>

