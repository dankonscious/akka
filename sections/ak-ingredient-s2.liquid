<style>
    .animation-moveup {
        transition: all 1s linear;
        animation: moveUp 1s linear;        
      }
      .animation-movedown {
        transition: all 1s linear;
        animation: moveDown 1s linear;        
      }
      @media(max-width: 767px) {
        .animation-moveup {
          
        }
      }
      @keyframes moveUp {
        0% {transform: translateY(0%);}
        50% {transform: translateY(100%);}
        100% {transform: translateY(0%);}
      }  
      @keyframes moveDown {
        0% {transform: translateY(0%);}
        50% {transform: translateY(-100%);}
        100% {transform: translateY(0%);}
      }
      @media (min-width: 1024px) and (max-width: 1200px) {
        #section2 .title h3.title-left {
          padding-right: 100px;
          padding-left: 20px;
        }
        #section2 .title h3.title-right {
          padding-left: 100px;
        }
      }
      @media (min-width: 645px) and (max-width: 1023px) {
        #section2 .title {
          top: 247px;
        }
      }
      /* ipad pro */
      @media (min-width: 1023px) and (max-width: 1200px) {
        #section2 .image-bot {
          transform: translateY(26%);
          scale: 1.5;
          z-index: 0;
          position: relative;
        }
        #section2 .title {
          z-index: 1;
        }
        #section2 .title-right {
          text-align: center;
        }
      }

</style>
<section id="section2" class="ak-overflow-hidden ak-font-['syne']">
  <div class="ak-min-h-[996px] bg-center bg-cover bg-no-repeat relative max-lg:ak-min-h-0 ak-max-" style="background-image:url({{ section.settings.background_image | img_url: 'master' }}) ;">
    <div class="imagetop max-lg:ak-mb-[109px]">          
      <img class="animation-movedown max-lg:ak-hidden" src="{{ section.settings.image_top_desktop | img_url: 'master' }}" alt="">
      <img class="animation-movedown ak-hidden max-lg:ak-block ak-mx-auto" src="{{ section.settings.image_top_mobile | img_url: 'master' }}" alt="">
    </div>
    <div class="title ak-max-w-[var(--page-width)] ak-w-full ak-absolute ak-top-[215px] max-lg:ak-top-[127px] ak-left-[50%] ak-translate-x-[-50%] ak-flex ak-items-center ak-justify-between ak-overflow-hidden max-lg:ak-flex-col">
      <h3 class="ak-text-white ak-text-[94px] max-lg:ak-text-[40px] ak-leading-[normal] ak-tracking-[-1.88px] max-lg:ak-tracking-[-0.8px] title-left">
        <span class="animation-moveup ak-block">{{ section.settings.title_part_1 }}</span>
      </h3>
      <h3 class="ak-text-white ak-text-[94px] max-lg:ak-text-[40px] ak-leading-[normal] ak-tracking-[-1.88px] max-lg:ak-tracking-[-0.8px] ak-font-['Blisstwin'] ak-title-right">
        <span class="animation-moveup ak-block">{{ section.settings.title_part_2 }}</span>
      </h3>
    </div>
    <div class="content ak-max-w-[var(--page-width)] ak-w-full ak-absolute ak-bottom-[80px] max-lg:ak-bottom-[55px] ak-left-[50%] ak-translate-x-[-50%] ak-overflow-hidden max-lg:ak-w-[343px]">
      <p class="ak-text-white ak-text-[32px] max-lg:ak-text-[20px] ak-leading-[normal] ak-uppercase ak-text-center animation-moveup">
        {{ section.settings.content_text }}
        <a href="{{ section.settings.link_url }}" class="ak-inline-flex ak-items-center ak-justify-center ak-gap-4 ak-underline max-lg:ak-flex max-lg:ak-mt-8">
          {{ section.settings.link_text }}
