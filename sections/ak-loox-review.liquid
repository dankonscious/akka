<!-- Loox Integration for Reviews and Ratings -->
<div class="loox-widget-section">
  <h2 class="loox-widget-heading">{{ section.settings.heading }}</h2>
  
  {% if section.settings.show_ratings %}
    <div class="loox-rating-widget">
      <div class="loox-rating loox-rating-hp" data-fetch data-id="{{ section.settings.featured_product | default: '10212706615599' }}" data-pattern="4.6 out of [count]"></div> 
        <span>_______</span>
      <div class="no-stars loox-rating loox-rating-hp" data-fetch  data-id="{{ section.settings.featured_product | default: '10212706615599' }}" data-pattern="[count] Reviews"></div> 
      <span class="revsubtitle">Sorted by people like you</span>
    </div>
  {% endif %}

  {% if section.settings.show_reviews %}
    <div class="loox-review-widget">
      <div id="looxReviews" data-product-id="{{ section.settings.featured_product | default: '10212706615599' }}" ></div> 
    </div>
  {% endif %}  
</div>

{% schema %}
{
  "name": "AK - Loox",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "As Seen On",
      "info": "This heading will appear above the review and rating widgets."
    },
    {
      "type": "product",
      "id": "featured_product",
      "label": "Featured Product",
      "info": "Select a product to highlight on this page."
    },
    {
      "type": "checkbox",
      "id": "show_reviews",
      "label": "Show Reviews",
      "default": true,
      "info": "Enable to display customer reviews from Loox."
    },
    {
      "type": "checkbox",
      "id": "show_ratings",
      "label": "Show Ratings",
      "default": true,
      "info": "Enable to display product ratings from Loox."
    }
  ],
  "presets": [
    {
      "name": "Loox Reviews",
      "category": "Custom",
      "settings": {
        "heading": "As Seen On",
        "show_reviews": true,
        "show_ratings": true
      }
    }
  ]
}
{% endschema %}
