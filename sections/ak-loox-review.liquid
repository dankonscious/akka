
<!-- Loox Integration for Reviews and Ratings -->
{% if section.settings.show_reviews %}
  <div class="loox-review-widget">
    <div class="loox-embed-widget" 
         data-product-id="{{ product.id }}"
         data-product-handle="{{ product.handle }}">
    </div>
  </div>
{% endif %}


{% schema %}
{
  "name": "AK - Loox",
  "settings": [
    {
      "type": "product",
      "id": "featured_product",
      "label": "Featured Product",
      "info": "Select a product to highlight on this page."
    },
    {
      "type": "checkbox",
      "id": "show_reviews",
      "label": "Show Reviews",
      "default": true,
      "info": "Enable to display customer reviews from Loox."
    },
    {
      "type": "checkbox",
      "id": "show_ratings",
      "label": "Show Ratings",
      "default": true,
      "info": "Enable to display product ratings from Loox."
    }
  ]
}
{% endschema %}
