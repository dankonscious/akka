<section id="marquee" class="ak-bg-white ak-pt-[49px] ak-mb-[-48px] max-[1200px]:ak-pt-0">
    <!-- Slider main container -->
    <div class="marquee swiper">
        <!-- Additional required wrapper -->
        <div class="swiper-wrapper">
            <!-- Slides -->
            {% for block in section.blocks %}
            <div class="swiper-slide !ak-flex !ak-items-center !ak-justify-center ak-gap-[35px] !ak-w-[unset] !ak-h-[unset] ak-font-['blisstwin']">
                <h3 class="ak-text-[100px] ak-text-[#C8D3F0] ak-capitalize">{{ block.settings.text_content }}</h3>
                <div class="ak-w-[15px] ak-h-[15px] ak-bg-[#C8D3F0] ak-rotate-45"></div>
            </div>
            {% endfor %}
        </div>      
    </div>
</section>


<script>
  const swiperMarquee = new Swiper(".marquee", {
    spaceBetween: 35,
    centeredSlides: true,
    speed: 2000,
    autoplay: {
      delay: 1,
    },
    loop: true,
    slidesPerView:'auto',
    allowTouchMove: false,
    disableOnInteraction: true
  });
</script>

