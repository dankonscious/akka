<!-- hero.liquid -->
<style>
    #hero .circlebg {
        background-image: url({{ section.settings.circle_image | img_url: 'master' }});
    }
    @media(max-width: 1200px) {
        #hero .circlebg {
            background-image: url({{ section.settings.circle_image_mobile | img_url: 'master' }});
        }        
    }
</style>

<section id="hero" class="bg-no-repeat bg-cover bg-center min-h-[980px] flex items-center relative max-md:min-h-[660px]" style="background-image: url({{ section.settings.background_image | img_url: 'master' }});">
    <div class="circlebg absolute inset-[50%] translate-x-[-50%] translate-y-[-50%] z-0 max-w-[604px] w-full h-[605px] bg-no-repeat bg-cover bg-center max-md:w-[348px] max-md:h-[348px] max-md:inset-[50%] max-md:translate-x-[-50%] max-md:translate-y-[-50%]">
    </div>
    <div class="flex items-center justify-center m-auto h-full">
        <div class="title overflow-hidden relative z-10 bg-[url({{ section.settings.text_background_image | img_url: 'master' }})] bg-cover bg-center bg-no-repeat max-md:bg-none">
            <h1 class="animation-moveup text-white text-[70px] leading-[normal] tracking-[-1.4px] capitalize font-['syne'] max-md:text-[40px] max-md:text-center">
                {{ section.settings.hero_text }}<span class="font-['Blisstwin'] max-md:block">{{ section.settings.sub_text }}</span>
            </h1>
        </div>
    </div>
</section>

{% schema %}
{
  "name": "AK - Science S1",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "image_picker",
      "id": "circle_image",
      "label": "Circle Image"
    },
    {
      "type": "image_picker",
      "id": "circle_image_mobile",
      "label": "Circle Image (Mobile)"
    },
    {
      "type": "image_picker",
      "id": "text_background_image",
      "label": "Text Background Image"
    },
    {
      "type": "text",
      "id": "hero_text",
      "label": "Hero Text",
      "default": "Our building blocks"
    },
    {
      "type": "text",
      "id": "sub_text",
      "label": "Sub Text",
      "default": "to better health"
    }
  ],
  "presets": [
    {
      "name": "AK - Science S1",
      "category": "AKKA SCIENCE"
    }
  ]
}
{% endschema %}
