<!-- hero.liquid -->
<style>
    .hero-sticky {
      position: sticky;
      top: 72px;
    }
    #hero {
      background-image: url({{ section.settings.background_image | img_url: 'master' }});
    }
    #hero .circlebg {
        background-image: url();
    }
    #hero .text-downup {
      animation:movedownUp 1.5s ease-out forwards;
      transition: 1.5s ease-out;
    }  
    #hero .whitebg {      
      background: white;      
      -webkit-mask: radial-gradient(#000 70%, #0000 71%) no-repeat, linear-gradient(#000 0 0);
      mask: radial-gradient(#000 70%, #0000 71%) no-repeat, linear-gradient(#000 0 0);
      mask-position: center;
      mask-size: 30% 60%;
      -webkit-mask-composite: xor;
      mask-composite: exclude;
      -webkit-transition: 1s ease-out;
      -moz-transition: 1s ease-out;
      -o-transition: 1s ease-out;
      transition: 1s ease-out;
      z-index: 11111111;
      -moz-animation:scoop 1.2s ease-out forwards;
      -webkit-animation:scoop 1.2s ease-out forwards;
      animation:scoop 1.2s ease-out forwards;
    }    
    #hero .circlesop {
      -moz-animation:circlesOp 1.2s ease-out forwards;
      -webkit-animation:circlesOp 1.2s ease-out forwards;
      animation:circlesOp 1.2s ease-out forwards;
    }
    @media(max-width: 1200px) {
        #hero .circlebg {
            background-image: url();s
        }   
        #hero {
          background-image: url({{ section.settings.background_image_mob | img_url: 'master' }});
        }     
    }
    @keyframes scoop {
      from {
        mask-size: 30% 60%;
        
      }
      to {
        mask-size: 150% 250%;
        
      }
    }
    @keyframes movedownUp {
      from {transform:translateY(100%);}
      to {transform:translateY(0%);}
    }
    @keyframes circlesOp {
      from {opacity: 0;}
      to {opacity: 1;}
    }
</style>

<section id="hero" class="bg-no-repeat bg-cover bg-center min-h-[980px] flex items-center relative max-md:min-h-[660px] font-['syne'] max-[1200px]:overflow-hidden" style="">
  <div class="whitebg absolute w-full h-full"></div>
    <div class="circlesop absolute inset-[50%] translate-x-[-50%] translate-y-[-50%] z-0 max-w-[604px] w-full h-[605px] bg-no-repeat bg-cover bg-center max-md:w-[348px] max-md:h-[348px] max-md:inset-[50%] max-md:translate-x-[-50%] max-md:translate-y-[-50%]">
      <img class="big rotate-me max-[1200px]:" src="{{ 'science-circle-big.png' | file_img_url: 'master' }}" alt="">
      <img class="small rotate-counter-me absolute top-0 max-[1200px]: " src="{{ 'science-circle-small.png' | file_img_url: 'master' }}" alt="">
    </div>
    <div class="flex items-center justify-center m-auto h-full">
        <div class="title overflow-hidden relative z-10 bg-[url({{ section.settings.text_background_image | img_url: 'master' }})] bg-cover bg-center bg-no-repeat max-md:bg-none">
            <h1 class="text-downup text-white text-[70px] leading-[normal] tracking-[-1.4px] capitalize font-['syne'] max-md:text-[40px] max-md:text-center">
                {{ section.settings.hero_text }}<span class="font-['Blisstwin'] max-md:block ml-[16px] max-[1200px]:ml-0">{{ section.settings.sub_text }}</span>
            </h1>
        </div>
    </div>
</section>

