<!-- hero.liquid -->
<style>
    .hero-sticky {
      position: sticky;
      top: 72px;
    }
    #hero {
      background-image: url({{ section.settings.background_image | img_url: 'master' }});
    }
    #hero .circlebg {
        background-image: url();
    }
    #hero .text-downup {
      animation:movedownUp 1.5s ease-out forwards;
      transition: 1.5s ease-out;
    }  
    #hero .whitebg {      
      background: white;      
      -webkit-mask: radial-gradient(#000 70%, #0000 71%) no-repeat, linear-gradient(#000 0 0);
      mask: radial-gradient(#000 70%, #0000 71%) no-repeat, linear-gradient(#000 0 0);
      mask-position: center;
      mask-size: 30% 60%;
      -webkit-mask-composite: xor;
      mask-composite: exclude;
      -webkit-transition: 1s ease-out;
      -moz-transition: 1s ease-out;
      -o-transition: 1s ease-out;
      transition: 1s ease-out;
      z-index: 11111111;
      -moz-animation:scoop 1.2s ease-out forwards;
      -webkit-animation:scoop 1.2s ease-out forwards;
      animation:scoop 1.2s ease-out forwards;
    }    
    #hero .circlesop {
      -moz-animation:circlesOp 1.2s ease-out forwards;
      -webkit-animation:circlesOp 1.2s ease-out forwards;
      animation:circlesOp 1.2s ease-out forwards;
    }
    #hero .spinpause {
      animation: spinPause 9s ease-in infinite;
    }
    #hero .spinpause-rev {
      animation: spinPauserev 9s ease-in infinite;
    }
    @media(max-width: 1200px) {
        #hero .circlebg {
            background-image: url();s
        }   
        #hero {
          background-image: url({{ section.settings.background_image_mob | img_url: 'master' }});
        }     
        #hero .whitebg {
          display: none;
        }
        #hero .text-downup {
          animation: unset;
        }
    }
    @keyframes scoop {
      from {
        mask-size: 30% 60%;
        
      }
      to {
        mask-size: 150% 250%;
        
      }
    }
    @keyframes movedownUp {
      from {transform:translateY(100%);}
      to {transform:translateY(0%);}
    }
    @keyframes circlesOp {
      from {opacity: 0;}
      to {opacity: 1;}
    }
    @keyframes spinPause {
      0% {
        transform: rotate(0deg);
        
      }
      25% {
        transform: rotate(90deg);
        
      }
      50% {
        transform: rotate(180deg);
        
      }
      75% {
        transform: rotate(270deg);
        
      }
      100% {
        transform: rotate(360deg);
        
      }
    }
    @keyframes spinPauserev {
      0% {
        transform: rotate(0deg);
        
      }
      25% {
        transform: rotate(-90deg);
        
      }
      50% {
        transform: rotate(-180deg);
        
      }
      75% {
        transform: rotate(-270deg);
        
      }
      100% {
        transform: rotate(-360deg);
        
      }
    }
</style>

<section id="hero" class="bg-no-repeat bg-cover bg-center min-h-[980px] flex items-center relative max-lg:min-h-[660px] font-['syne'] max-lg:overflow-hidden" style="">
  <div class="whitebg absolute w-full h-full"></div>
    <div class="circlesop absolute inset-[50%] translate-x-[-50%] translate-y-[-50%] z-0 max-w-[604px] w-full h-[605px] bg-no-repeat bg-cover bg-center max-lg:w-[348px] max-lg:h-[348px] max-lg:inset-[50%] max-lg:translate-x-[-50%] max-lg:translate-y-[-50%]">
      <img class="big spinpause max-lg:" src="{{ 'science-circle-big.png' | file_img_url: 'master' }}" alt="">
      <img class="small spinpause-rev absolute top-0 max-lg: " src="{{ 'science-circle-small.png' | file_img_url: 'master' }}" alt="">
    </div>
    <div class="flex items-center justify-center m-auto h-full">
        <div class="title overflow-hidden relative z-10 bg-[url({{ section.settings.text_background_image | img_url: 'master' }})] bg-cover bg-center bg-no-repeat max-lg:bg-none">
            <h1 class="text-downup text-white text-[70px] leading-[normal] tracking-[-1.4px] capitalize font-['syne'] max-lg:text-[40px] max-lg:text-center">
                {{ section.settings.hero_text }}<span class="font-['Blisstwin'] max-lg:block ml-[16px] max-lg:ml-0">{{ section.settings.sub_text }}</span>
            </h1>
        </div>
    </div>
</section>

